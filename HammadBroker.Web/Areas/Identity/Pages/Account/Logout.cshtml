@page
@model HammadBroker.Web.Areas.Identity.Pages.Account.LogoutModel
@{
	ViewData["Title"] = "تسجيل الخروج";
}

<header>
	<h1>@ViewData["Title"]</h1>
	@{
		if (User.Identity?.IsAuthenticated == true)
		{
			<form class="row row-cols-auto g-3 align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
				<div class="col-12">
					<button type="submit" class="nav-link btn btn-link text-dark">اضغط هنا للتسجيل الخروج</button>
				</div>
			</form>
		}
		else
		{
			<p>لقد قمت بتسجيل الخروج بنجاح من التطبيق.</p>
		}
	}
</header>
