@page
@using HammadBroker.Web.Areas.Identity.Pages.Account.Manage
@model GenerateRecoveryCodesModel
@{
	ViewData["Title"] = "إنشاء رموز استرداد المصادقة الثنائية (2FA)";
	ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
	<p>
		<span class="glyphicon glyphicon-warning-sign"></span>
		<strong>ضع هذه الرموز في مكان آمن.</strong>
	</p>
	<p>
		إذا فقدت جهازك ولم يكن لديك رموز الاسترداد ، فستفقد الوصول إلى حسابك.
	</p>
	<p>
		لا يؤدي إنشاء رموز استرداد جديدة إلى تغيير المفاتيح المستخدمة في تطبيقات المصادقة. إذا كنت ترغب في تغيير المفتاح
		المستخدمة في تطبيق المصادقة ، يجب عليك <a asp-page="./ResetAuthenticator">إعادة تعيين مفاتيح المصادقة الخاصة بك.</a>
	</p>
</div>
<div>
	<form method="post">
		<button class="btn btn-danger" type="submit">انشاء</button>
	</form>
</div>
