@page
@using HammadBroker.Web.Areas.Identity.Pages.Account.Manage
@model ShowRecoveryCodesModel
@{
	ViewData["Title"] = "رموز الاسترداد";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
	<p>
		<strong>ضع هذه الرموز في مكان آمن.</strong>
	</p>
	<p>
		إذا فقدت جهازك ولم يكن لديك رموز الاسترداد ، فستفقد الوصول إلى حسابك.
	</p>
</div>
<div class="row">
	<div class="col-md-12">
		@for (int row = 0; row < Model.RecoveryCodes.Length; row += 2)
		{
			<code class="recovery-code">@Model.RecoveryCodes[row]</code><text>&nbsp;</text><code class="recovery-code">@Model.RecoveryCodes[row + 1]</code><br />
		}
	</div>
</div>
