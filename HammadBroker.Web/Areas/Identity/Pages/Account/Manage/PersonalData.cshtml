@page
@using HammadBroker.Web.Areas.Identity.Pages.Account.Manage
@model PersonalDataModel
@{
	ViewData["Title"] = "بيانات شخصية";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
	<div class="col-md-12">
		<p>يحتوي حسابك على بيانات شخصية قدمتها لنا. تتيح لك هذه الصفحة تنزيل هذه البيانات أو حذفها.</p>
		<p>
			<strong>سيؤدي حذف هذه البيانات إلى إزالة حسابك نهائيًا ، ولا يمكن استرداد ذلك.</strong>
		</p>
		<form id="download-data" asp-page="DownloadPersonalData" method="post">
			<button class="btn btn-outline-primary" type="submit">تحميل</button>
			<a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger">حذف</a>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
