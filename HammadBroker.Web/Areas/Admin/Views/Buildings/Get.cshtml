@using HammadBroker.Model.DTO
@model BuildingForDetails

@{
	string id = Context.Request.Query["id"];
	ViewData["Title"] = $"#{id} {Model.BuildingTypeName} {Model.AdTypeName} {Model.FinishingTypeName}";
}

<div class="row mb-1">
	<div class="col-12">
		<a asp-area="Admin" asp-controller="Buildings" asp-action="Add" class="btn btn-outline-primary border-0"><i class="fa fa-plus"></i> إضافة عقار</a>
	</div>
</div>

@await Component.InvokeAsync(typeof(BuildingViewComponent), new BuildingModel(Model)
{
	Id = id,
	CanEdit = false,
	CanUpload = true
})