@using HammadBroker.Model.DTO
@model BuildingToUpdate

@{
	ViewData["Title"] = "تعديل اعلان";
	string id = Context.Request.Query["id"];
}

@if (!string.IsNullOrEmpty(id))
{
	<div class="row mb-1">
		<div class="col-12">
			<a asp-area="Admin" asp-controller="Buildings" asp-action="Add" class="btn btn-outline-primary border-0"><i class="fa fa-plus"></i> إضافة اعلان</a>
		</div>
	</div>
}

@await Component.InvokeAsync(typeof(BuildingViewComponent), new BuildingModel(Model)
{
	Id = id,
	CanEdit = true,
	CanUpload = true
})