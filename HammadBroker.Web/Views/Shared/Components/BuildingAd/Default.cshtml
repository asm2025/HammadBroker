			{
				@if (!string.IsNullOrEmpty(Model.Building.Description))
				{
					<div class="col-12">
						<label asp-for="Building.Description"></label>:&nbsp;
						@Html.DisplayFor(e => e.Building.Description)
					</div>
				}
			}
		</div>
