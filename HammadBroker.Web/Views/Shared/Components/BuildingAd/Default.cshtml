			<div class="col-12">
				<small>@Model.Ad.Date.ToString("d") @Model.Ad.Type.GetDisplayName() </small>
				@if (Model.Building is not null)
				{
					<small>@Model.Building.BuildingType.GetDisplayName() @Model.Building.FinishingType?.GetDisplayName()</small>
					<h5>@Model.Building.Name</h5>
				}
			</div>
			@if (Model.Building is not null)
			{
				@if (Model.Building.Floor > 0)
				{
					<div class="col-6">
						<label asp-for="Building.Floor"></label>:&nbsp;
						@Html.DisplayFor(e => e.Building.Floor)
