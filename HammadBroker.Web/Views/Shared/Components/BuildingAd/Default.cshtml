				{
					<div class="col-6">
						<label asp-for="Building.CountryCode"></label>:&nbsp;
						@Html.DisplayFor(e => countryNameLookup.CountryName)
					</div>
				}
			}
			@if (!string.IsNullOrEmpty(Model.Ad.Phone))
			{
				<div class="col-6">
					<label asp-for="Ad.Phone"></label>
					@Html.DisplayFor(e => e.Ad.Phone)
