{
	"Email": "info@localhost",
	"Website": "http://localhost:5000",
	"useSSL": false,
	"AllowedHosts": "localhost",
	"ConnectionStrings": {
		"DefaultConnection": "Server=localhost;Database=HammadBroker;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true;"
	},
	"Migrations": {
		"ApplyMigrations": true,
		"ApplySeed": true
	},
	"VirtualPathSettings": {
		"PathContents": [
			{
				"PhysicalPath": "..\\..\\images"
			},
			{
				"PhysicalPath": "..\\..\\images\\data\\users"
			},
			{
				"PhysicalPath": "..\\..\\images\\data\\assets"
			}
		]
	},
	"SmtpConfiguration": {
		"Host": "localhost",
		"Port": 25,
		"UseSSL": false
	},
	"DetailedErrors": true,
	"DataLoggingEnabled": true,
	"Serilog": {
		"WriteTo": [
			{},
			{
				"Name": "File",
				"Args": {
					"path": "_logs\\hb-.log",
					"fileSizeLimitBytes": 2147483647,
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"shared": "true",
					"outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}    {Properties:j}{NewLine}",
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
					"flushToDiskInterval": "00:00:01"
				}
			}
		]
	}
}
